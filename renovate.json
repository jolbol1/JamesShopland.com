{
  "$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "extends": ["config:base", "gitmoji"],
  "packageRules": [
    {
      "groupName": "Contentlayer",
      "matchPackageNames": ["contentlayer", "next-contentlayer"]
    }
  ],
  "prHourlyLimit": 0,
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true,
    "automergeType": "branch",
    "platformAutomerge": true
  },
  "automerge": true,
  "automergeType": "branch",
  "platformAutomerge": true
}
